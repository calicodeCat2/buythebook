<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8" />
  <title>Splash</title>
  <!-- Materialize Link -->
  <% include materializestyle %>
</head>

<body>
  <!-- Mandy's navbar -->
  <% include navbar %>

  <main class="container">

  <div class="row">
  <div class="col s12 m12">
    <div class="card light-blue darken-1">
      <div class="card-content white-text">
        <span class="card-title">
          <h2>Welcome to</h2>
          <h1>BuytheBook</h1></span>
      </div>
    </div>
  </div>
</div>

    <div class="row">
    <div class="col s6">
    <% for (let i = 0; i < blogs.length/2; i++) { %>
    <div>
      <h4>
        <%= blogs[i].blog_title %>
      </h4>
      <span><img src="<%= bloggers[i].image_url %>" height="100px" alt=""></span>
      <h5>
        <%= bloggers[i].blogger_name %>
      </h5>
      <% } %>
    </div>
  </div>


  <div class="col s6">
    <% blogs.length %>
  <% for (let j = 4; j < blogs.length; j++) { %>
  <div>
    <h4>
      <%= blogs[j].blog_title %>
    </h4>
    <span><img src="<%= bloggers[j].image_url %>" height="100px" alt=""></span>
    <h5>
      <%= bloggers[j].blogger_name %>
    </h5>
    <% } %>
  </div>
</div>
</div>

</main>


  <% include footer %>
  <!-- JavaScript Links -->
  <% include materializejs %>
</body>

</html>
