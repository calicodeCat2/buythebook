<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Blogger Home Page</title>
    <!-- Materialize Link -->
    <% include materializestyle %>
    <!-- Include Quill -->

</head>

<body>
    <!-- Mandy's navbar -->
    <% include navbar %>

    <main class="container">

        <div class="row">
            <div class="col s12 m12">
                <div class="welcome">
                    <h3>Welcome,
                        <%= loggedInBlogger.blogger_name %>
                    </h3>
                </div>
            </div>
        </div>

    </main>



    <div class="current_blogs">
        <h5>All Blogs:</h5>

        <% for(let i = 0 ; i < blogs.length ; i++){ %>
        <h4><a href="">
                <%= blogs[i].blog_title%></a></h4>
        <div class="blog_content">
            <%- blogs[i].blog_content%>
        </div>
        <button type="button" action="" method="GET">Edit this Blog</button>
        <% if(blogs[i].approved === true){%>
        <% let status = "Approved!" %>
        <h6>Status:
            <%=status%>
        </h6>
        <% }else{ let status = "Not Approved."%>
        <h6>Status:
            <%=status%>
        </h6>
        <%}%>
        <%}%>
    </div>

    <% include footer %>
    <!-- JavaScript Links -->
    <% include materializejs %>
</body>

</html>